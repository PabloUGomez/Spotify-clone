---
import LibraryIcon from "../icons/Library.astro"
import HomeIcon from '../icons/Home.astro'
import SearchIcon from '../icons/Search.astro'
import SideMenuItem from './SideMenuItem.astro'
import SideMenuCard from './SideMenuCard.astro'
import { playlists } from './data.tsx'
---
<nav class='flex flex-col flex-1 gap-2 overflow-hidden'>
  <div class='bg-zinc-900 rounded-lg p-2'>
    <ul>
      <SideMenuItem href='/'>
        <HomeIcon />
        <span>Inicio</span>
      </SideMenuItem>
      <SideMenuItem href='/#'>
        <SearchIcon />
        <span>Buscar</span>
      </SideMenuItem>
    </ul>
  </div>
  <div class='bg-zinc-900 rounded-lg p-2 flex-1 overflow-y-auto'>
    <ul>
      <SideMenuItem href='/#'>
        <LibraryIcon />
        <span>Tu biblioteca</span>
      </SideMenuItem>
      {
        playlists.map((playlist: any) => (
          <SideMenuCard playlist={playlist}/>
        ))
      }
    </ul>
  </div>
</nav>